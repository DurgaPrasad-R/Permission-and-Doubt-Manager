<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <style>
        * {
            padding: 0;
            margin: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Bricolage Grotesque', sans-serif;
            background-color: #01BCE1;
        }

        .main {
            height: 100vh;
            display: flex;
            justify-content: space-around;
            align-items: center;
        }

        .profile{
            display: flex;
            justify-content: center;
        }

        label,
        input[type=submit] {
            font-weight: 600;
        }

        input{
            margin: 10px 0;
            width: 25vmax;
            height: 5vmin;
            font-size: 2.5vmin;
            padding: 0 1vmin;
            border-radius: 4px;
            border: 1px solid black;
        }

        input[type=submit]{
            background-color: #1240B2;
            color: white;
            border: 1px solid black;
            cursor: pointer;
        }

        .ack{
            display: flex;
            justify-content: center;
        }

        @keyframes shake {
            0%, 100% {
                transform: translateX(0);
            }
            10%, 30%, 50%, 70%, 90% {
                transform: translateX(-10px);
            }
            20%, 40%, 60%, 80% {
                transform: translateX(10px);
            }
        }

        .shake {
            animation: shake 0.5s ease-in-out 5s;
        }

        @media (max-width:600px) {
            .img-1{
                display: none;
            }    

            input {
                margin: 10px 0;
                width: 40vmax;
                height: 5vmin;
                font-size: 2.5vmin;
                padding: 0 1vmin;
            }
        }
    </style>
</head>
<body>
    <div class="main">
        <form action="/login" method="post" id="myform">
            <div class="profile">
                <img src="assets/images/profile.png" alt="">
            </div>
            <div class="inputs">
                <label for="email">Enter your email:</label><br>
                <input type="email" name="Email" id="email" placeholder="Enter your email:" required>
            </div>
            <div class="inputs">
                <label for="name">Enter your Department:</label><br>
                <input type="text" name="Department" id="Department" placeholder="Enter your Department:" required>
            </div>
            <div class="inputs">
                <label for="password">Enter your password:</label><br>
                <input type="password" name="Password" id="password" placeholder="Enter your password:" required>
            </div>
            <% if (flag) { %>
                <p class="error-message" id="error-message"> <%= message %> </p>
                <input type="hidden" id="Flag" value="<%= flag %>">
            <% } %>
            <div class="input_btn">
                <input type="submit" value="Login">
            </div>
            <div class="ack">
                <a href="/forgot-password">Forgot Password?</a>
            </div>
            <div class="ack">
                <a href="/signup">Don't have an account?</a>
            </div>
        </form>
    </div>
    <script type="text/javascript">
        const emailInp = document.getElementById("email");
        const deptInp = document.getElementById("Department");
        const passInp = document.getElementById("password");
        const errorMsg = document.getElementById("error-message");
        errorMsg.style.color = 'red';
        emailInp.addEventListener('input',function(){
            errorMsg.style.display="none";
        });
        deptInp.addEventListener('input',function(){
            errorMsg.style.display="none";
        });
        passInp.addEventListener('input',function(){
            errorMsg.style.display="none";
        });
    </script>
</body>
</html>